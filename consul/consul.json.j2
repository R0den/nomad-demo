{
  "log_level": "info",
  "data_dir": "/var/consul",
  "bind_addr": "{{ node_ip }}",
  "client_addr": "{{ node_ip }}",
{% if server_ip == node_ip %}
  "server": true,
  "bootstrap_expect": 1,
  "ui": true
{% else %}
  "server": false,
  "start_join": ["{{ server_ip }}"],
  "rejoin_after_leave": true
{% endif %}
}
